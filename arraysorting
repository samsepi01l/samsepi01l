def findSmallest(arr):
    smallest = arr[0] # По умолчанию наименьший элемент является первым
    smallest_index = 0 # Индекс наименьшего элемента по умолчанию
    for i in range (1, len(arr)): # Диапазон от 1 до последнего элемента (0 пропускаем, так как по умолчанию он наименьший
        if arr[i] < smallest: # Если i-й элемент меньше, чем наименьший элемент
            smallest = arr[i] # i-й элемент становится наименьшим
            smallest_index = i # Индекс i-й элемента
    return smallest_index # После окончания выполнения цикла возвращается ИНДЕКС наименьшего элемента

def Sorting(arr): 
    newArr = [] # Отсортированный массив
    copiedArr = list(arr) # Скопированный массив для выполнения всех операций, не затрагивая оригинальный
    for i in range(len(copiedArr)): # В диапазоне от 0 до последнего элемента copiedArr
        smallest = findSmallest(copiedArr) # Индекс наименьшего элемента для данной итерации
        newArr.append(copiedArr.pop(smallest)) # С конца добавляются элементы в порядке убывания, из copiedArr удаляются элементы при каждой итерации
    return newArr # По окончанию цикла возвращается новый отсортированный массив
            
arr = [3,5,7,2,9] 
print(Sorting(arr)) # Output: [2, 3, 5, 7, 9]

        